@using Microsoft.AspNetCore.Identity
@using GroupManager.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" style="display: inline-block">
        <li>
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><span>@UserManager.GetUserName(User)</span></a>
        </li>
        <li class="btn-cta">
            <a onclick="document.getElementById('logoutForm').submit();"><span>Log out</span></a>
        </li>
    </form>
}
else
{
    <li class="btn-cta"><a asp-area="" asp-controller="Account" asp-action="Register"><span>Register</span></a></li>
    <li class="btn-cta"><a asp-area="" asp-controller="Account" asp-action="Login"><span>Log in</span></a></li>
}
