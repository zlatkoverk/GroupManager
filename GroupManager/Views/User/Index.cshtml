@model GroupManager.Models.UserViewModels.UserUploadModel

@{
    ViewData["Title"] = "My profile";
}

<h2>@ViewData["Title"]</h2>

<hr />
@if (!string.IsNullOrEmpty(Model.PictureURI))
{
    <img class="img-thumbnail" src="@Model.PictureURI"/>
}
else
{
    <img class="img-thumbnail" src="/images/noprofile.png"/>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="group" asp-action="Index">Back</a>
</div>

